@model PasswordChecker
@{
    ViewBag.Title = "Password Strength Checker";
}

<h2>Password Strength Checker</h2>

<form asp-action="CheckStrength" asp-controller="Password" method="post">
    <div class="form-group">
        <label asp-for="CheckPassordStrength" class="control-label"></label>
        <input asp-for="CheckPassordStrength" class="form-control" />
        <span asp-validation-for="CheckPassordStrength" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Check Strength</button>
</form>

@if (ViewBag.Strength != null)
{
    <div class="alert alert-info">
        Password Strength: @ViewBag.Strength
    </div>
}

